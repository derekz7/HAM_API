@model HAM_API.Models.tbl_doctor

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">@Html.DisplayFor(model => model.name)</h4>
            <p class="m-0 font-weight-light"> ID: @Html.DisplayFor(model => model.id)</p>
        </div>
        <div class="card-body">

            <dl class="dl-horizontal " width="100%" cellspacing="0">
                <dt style="padding-bottom : 10px">
                    Chuyên khoa: <b style="color:limegreen">@Html.DisplayFor(model => model.tbl_department.name)</b>
                </dt>

                <dt style="padding-bottom : 10px">
                    Phòng:
                    <b>
                        @Html.DisplayFor(model => model.room)
                    </b>
                </dt>

                @if (Model.imgUrl != null)
                {
                    <dt style="padding-bottom : 10px">
                        <img src="@Model.imgUrl" width="100" height="100" />
                    </dt>
                }
                else
                {
                    <dt style="padding-bottom : 10px">
                        <img src="~/Content/img/doctordefault.png" width="100" height="100" />
                    </dt>
                }
            </dl>

        </div>
        <div class="card-footer py-3">
            <p>
                <a style="margin-right: 20px" class="btn btn-secondary" href="/Doctor/Index">Quay lại</a>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Xóa", "Delete", new { id = Model.id }, new { @class = "btn btn-danger" })
            </p>
        </div>
    </div>
</div>