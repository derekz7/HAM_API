@model HAM_API.Models.tbl_doctor

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-danger">Xoá doctor: @Html.DisplayFor(model => model.name)</h4>
            <h6 class="m-0 font-weight-bold"> ID: @Html.DisplayFor(model => model.id)</h6>
            <h5>Bạn có chắc muốn xoá không ?</h5>
        </div>
        <div class="card-body">

            <dl class="dl-horizontal " width="100%" cellspacing="0">
                <dt style="padding-bottom : 10px">
                    Full name:
                    <b>
                        @Html.DisplayFor(model => model.name)
                    </b>
                </dt>

                <dt style="padding-bottom : 10px">
                    Department:
                    <b>
                        @Html.DisplayFor(model => model.tbl_department.name)
                    </b>
                </dt>
                <dt style="padding-bottom : 10px">
                    Room:
                    <b>
                        @Html.DisplayFor(model => model.room)
                    </b>
                </dt>
            </dl>

        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card-footer py-3">
                <p>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-secondary" href="/Doctor/Index">Back to list</a>
                </p>
            </div>
        }

    </div>
</div>