@model IEnumerable<HAM_API.Models.tbl_service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count() > 0)
{

    <div class="container-fluid">

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Danh sách loại khám</h4>
                <a class="float-lg-right btn btn-primary" href="/Service/Create">Tạo mới</a>

            </div>
            <div class="card-body">
              
                <div class="table-responsive table-wrapper-scroll-y">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr style="Background: #456bd9">
                                <th style="color: white"> Tên loại</th>
                                <th style="color: white"> Mô tả</th>
                                <th style="color: white"> Giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-5">
                                        <a href="/Service/Details/@item.id">
                                            <b>@Html.DisplayFor(modelItem => item.name)</b>
                                        </a>

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                    <td style="color:limegreen">
                                        <b>@string.Format("{0:#,##0}", item.price)</b>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

}
else
{
    <div class="container-fluid">

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">No service exists</h4>
                <a class="float-lg-right btn btn-primary" href="/Service/Create">Tạo mới</a>
            </div>
        </div>

    </div>

}

@section scripts {
    <script>
        $(document).ready(function () {
            // Initialize the DataTable
            $('#dataTable').DataTable();
        });
    </script>
    <style>
        .table-wrapper-scroll-y {
            max-height: 400px;
            overflow-y: auto;
        }
    </style>
}