@model HAM_API.Models.tbl_booking

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">@Html.DisplayFor(model => model.tbl_patient.pt_name)</h4>
            <p class="m-0 font-weight-light"> ID: @Html.DisplayFor(model => model.id)</p>
            <p class="m-0 font-weight-light"> User ID: @Html.DisplayFor(model => model.user_id)</p>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal " width="100%" cellspacing="0">

                <dt style="padding-bottom : 10px">
                    Số phiếu: <span style="color:black">@Model.order_num</span>
                </dt>
                <dt style="padding-bottom : 10px">
                    Loại hình khám: <span style="color:black">@Model.tbl_service.name</span>
                </dt>
                <dt style="padding-bottom : 10px">
                    Ngày khám: <span style="color:black">@Model.date</span>
                </dt>
                <dt style="padding-bottom : 10px">
                    Giờ khám: <span style="color:black">@Model.time</span>
                </dt>
                <dt style="padding-bottom : 10px">
                    Bác sĩ: <span style="color:black">@Model.tbl_doctor.name</span>
                </dt>
                <dt style="padding-bottom : 10px">
                    Phòng khám: <span style="color:black">@Model.tbl_doctor.room</span>
                </dt>
                @if (Model.status.Equals("Chờ khám"))
                {
                    <dt style="padding-bottom : 10px">
                        Trạng thái: <span style="color:orange">@Model.status</span>
                    </dt>
                }
                else if (Model.status.Equals("Đã khám"))
                {
                    <dt style="padding-bottom : 10px">
                        Trạng thái: <span style="color:forestgreen">@Model.status</span>
                    </dt>
                }
                else
                {
                    <dt style="padding-bottom : 10px">
                        Trạng thái: <span style="color:black">@Model.status</span>
                    </dt>
                }

                <dt style="padding-bottom : 10px">
                    Phí khám(tạm tính): <span>@string.Format("{0:#,##0}",Model.price) VND</span>
                </dt>
            </dl>

        </div>
        <div class="card-footer py-3">
            <p>
                <a style="margin-right: 20px" class="btn btn-secondary" href="/Booking/Pending">Quay lại</a>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Xóa", "Delete", new { id = Model.id }, new { @class = "btn btn-danger" })
            </p>
        </div>
    </div>
</div>
