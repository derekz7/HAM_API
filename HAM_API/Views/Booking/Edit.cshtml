@model HAM_API.Models.tbl_booking

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">Chỉnh sửa lịch khám</h3>
        </div>
        @using (Html.BeginForm("Edit", "Booking", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <br />
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.id, "ID", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.date, "Ngày khám", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control dob-datepicker" } })
                        @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.time, "Giờ khám", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.time, new List<SelectListItem>
                            {
                                new SelectListItem { Text = "08:00 - 08:30", Value = "08:00 - 08:30" },
                         new SelectListItem { Text = "08:00 - 08:30", Value = "08:00 - 08:30" },
                         new SelectListItem { Text = "08:30 - 09:00", Value = "08:30 - 09:00" },
                         new SelectListItem { Text = "09:00 - 09:30", Value = "09:00 - 09:30" },
                         new SelectListItem { Text = "09:30 - 10:00", Value = "09:30 - 10:00" },
                         new SelectListItem { Text = "10:00 - 10:30", Value = "10:00 - 10:30" },
                         new SelectListItem { Text = "10:30 - 11:00", Value = "10:30 - 11:00" },
                         new SelectListItem { Text = "11:00 - 11:30", Value = "11:00 - 11:30" },
                         new SelectListItem { Text = "13:00 - 13:30", Value = "13:00 - 13:30" },
                         new SelectListItem { Text = "13:30 - 14:00", Value = "13:30 - 14:00" },
                         new SelectListItem { Text = "14:00 - 14:30", Value = "14:00 - 14:30" },
                         new SelectListItem { Text = "14:30 - 15:00", Value = "14:30 - 15:00" },
                         new SelectListItem { Text = "15:00 - 15:30", Value = "15:00 - 15:30" },
                         new SelectListItem { Text = "15:30 - 16:00", Value = "15:30 - 16:00" },
                           new SelectListItem { Text = "16:00 - 16:30", Value = "16:00 - 16:30" }
                            }, "-- Chọn giờ khám --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.status, "Trạng thái", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.status, new List<SelectListItem>
                            {
                                new SelectListItem { Text = "Chờ khám", Value = "Chờ khám" },
                         new SelectListItem { Text = "Đã khám", Value = "Đã khám" },
                         new SelectListItem { Text = "Canceled", Value = "Canceled" }

                            }, "--Chọn giờ khám--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.pt_id, "Hồ sơ bệnh nhân", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("pt_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.pt_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.sv_id, "Loại hình khám", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("sv_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.sv_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.dc_id, "Doctor ID", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.dc_id, new { @Value = ViewBag.dc_id })
                        @Html.EditorFor(model => model.dc_id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.dc_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.order_num, "Order Number", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.order_num, new { @Value = ViewBag.order_num })
                        @Html.EditorFor(model => model.order_num, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.order_num, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.user_id, "User ID", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.user_id, new { @Value = ViewBag.user_id })
                        @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section scripts {
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />
    <script>
        $(function () {
            $('.dob-datepicker').datepicker({
                dateFormat: 'dd/m/yy',
                changeYear: true,
                yearRange: '1900:+0',
            });
        });
    </script>
}
